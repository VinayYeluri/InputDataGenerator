<UserControl x:Class="SIEFSimulatorInputGenerator.UserControls.CoursesUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SIEFSimulatorInputGenerator.UserControls"
             mc:Ignorable="d" 
             Width="350" Height="40">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Margin="7">IdCourse</Label>
        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Path=IdCourse, UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Margin="7"></TextBox>
    </Grid>
</UserControl>
