<UserControl x:Class="SIEFSimulatorInputGenerator.UserControls.JalonsEtapeUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SIEFSimulatorInputGenerator.UserControls"
             mc:Ignorable="d" 
             Width="700" Height="80">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="251*"/>
            <ColumnDefinition Width="101*"/>
            <ColumnDefinition Width="247*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Margin="7,7,8,7">Rang</Label>
        <Label Grid.Row="1" Grid.Column="0" Margin="7,7,8,7">Jalon</Label>
        <Label Grid.Row="0" Grid.Column="2" Margin="7.667,7,8.667,7">TypeJalon</Label>
        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Path=Rang}" Margin="6,7,6.333,7"></TextBox>
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Path=Jalon}" Margin="6,7,6.333,7"></TextBox>
        <TextBox Grid.Row="0" Grid.Column="3" Text="{Binding Path=TypeJalon}" Margin="5.333,7,7,7"></TextBox>
    </Grid>
</UserControl>
