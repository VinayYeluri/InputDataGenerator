<Application x:Class="SIEFSimulatorInputGenerator.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Controls="clr-namespace:System.Windows.Controls;assembly=PresentationFramework"
             xmlns:local="clr-namespace:SIEFSimulatorInputGenerator"
             StartupUri="View/MainWindow.xaml">
    <Application.Resources>
        <Border x:Key="brush" CornerRadius="3"></Border>
        <Style TargetType="Controls:Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                        <GradientStop Color="White" Offset="0.5"/>
                        <GradientStop Color="#FFE1E1E1" Offset="0.5"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Cursor" Value="Hand"></Setter>
        </Style>
    </Application.Resources>
</Application>
